# Redirect HTTP to HTTPS
RewriteCond %{HTTPS} !=on
RewriteRule ^/?(.*) https://%{SERVER_NAME}/$1 [R=301]

# Remove trailing slashes
RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} (.+)/$
RewriteRule ^ %1 [R=301,L]

RewriteRule &/tools/news/?& https://news.jmthornton.net [R=301,QSA]

RewriteRule ^/_nsr/?$ projects/_nsrbiz/ [R=301,QSA]
RewriteRule ^/_nsrbiz/?$ projects/_nsrbiz/ [L,QSA]

RewriteRule ^/p/?$ / [R=301]

# Add security and privacy related headers
Header set X-Content-Type-Options "nosniff"
Header set X-XSS-Protection "1; mode=block"
Header set X-Frame-Options "SAMEORIGIN"
Header set X-Download-Options "noopen"
Header set X-Permitted-Cross-Domain-Policies "none"
SetEnv modHeadersAvailable true

<IfModule mod_headers.c>
    # one week
    <FilesMatch "\.(jpg|jpeg|webp|png|gif|swf)$">
        Header set Cache-Control "max-age=21600, public, must-revalidate"
    </FilesMatch>

    # one week
    <FilesMatch "\.(js|css|swf)$">
        Header set Cache-Control "max-age=21600, must-revalidate"
    </FilesMatch>
</IfModule>

# Allow HTML pages to load without the filename extension
RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html

### FastComet Pagespeed
#ModPagespeed On
