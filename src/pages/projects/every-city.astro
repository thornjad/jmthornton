---
import Base from '../../layouts/Base.astro';
---

<Base
  title="Every city I've been to | Jade Michael Thornton"
  description="A basic map showing every city I've ever been to, at least to my own memory."
  fontStrategy="prefetch"
>
  <Fragment slot="head">
    <link type="text/plain" rel="author" href="https://jmthornton.net/humans.txt" />
    <style>
      body {
        margin: 0;
        height: calc(100vh - 5px);
        padding: 5px 0 0;
      }

      iframe {
        display: block;
        border: none;
        height: 100%;
        width: 100%;
      }
    </style>
  </Fragment>

  <iframe src="https://www.google.com/maps/d/u/0/embed?mid=1Mg5rPq4u03WqQnuHxvSxTyrr_k-1XbkB&ehbc=2E312F" width="640" height="480" frameborder="0" referrerpolicy="no-referrer"></iframe>
</Base>
